<%= form_for @category do |f| %>
  <%= f.error_messages %>
  <div class="table-row">
    <span class="table-cell name"><%= f.label 'Название категории' %></span>
    <span class="table-cell"><%= f.text_field :name, class: "font-size-title" %></span>
  </div>

  <div class="table-row">
    <span class="table-cell name"><%= f.label 'Приоритет категории' %></span>
    <span class="table-cell"><%= f.text_field :priority, class: "font-size-title" %></span>
  </div>

  <div class="table-row">
    <span class="table-cell"></span>
    <span class="table-cell"><%= f.submit 'Сохранить' %></span>
  </div>
<% end %>
