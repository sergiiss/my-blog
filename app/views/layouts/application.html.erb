<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Все статьи', posts_path, class: "btn btn-lg btn-primary" %>
          </li>
          <% if current_user && current_user.name == 'admin' %>
            <li class="nav-item">
              <%= link_to 'Новая статья', new_post_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Список пользователей', users_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
        <div class="input">
          <% if current_user %>
            <div class="user avatar">
              <% if current_user.avatar %>
                <%= link_to((image_tag "/avatars/#{current_user.id}/avatar#{ current_user.id }.png", width: '45'), user_path(current_user.id)) %>
              <% else %>
                <%= link_to((image_tag 'images.png', width: '45'), users_path) %>
              <% end %>
            </div>

            <div class="user user-name"><%= current_user.name %>
              <div class="output"><%= link_to 'Выйти', sessions_destroy_path %></div>
          <% else %>
              <div class="input-button">
                <span><%= link_to 'Регистрация', new_user_path, class: 'btn btn-success' %></span>
                <span><%= link_to 'Войти', new_sessions_path, class: 'btn btn-outline-success' %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
