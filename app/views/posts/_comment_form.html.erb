<div class="save-form_comment">
  <% if current_user %>
    <%= form_for([post, Comment.new]) do |f| %>
      <%= f.error_messages %>
      <div class="avatar-comment">
        <% if current_user.avatar %>
          <%= link_to((image_tag "/avatars/#{current_user.id}/#{ current_user.avatar }"), user_path(current_user.id)) %>
        <% else %>
          <%= link_to((image_tag 'images.png'), user_path(current_user.id)) %>
        <% end %>
      </div>
      <div class="save-text-comment">
        <%= f.hidden_field :name, :value => current_user.name %>
        <span>
          <%= f.text_area :body, class: "form-control", id: "exampleSelect2", :placeholder => "#{current_user.name.capitalize}, прокомментируйте эту статью..."  %>
        </span>
        <div class="button-form"><%= f.submit 'Высказаться', class: "btn btn-success" %></div>
      </div>
    <% end %>
  <% else %>
    <div class="save-text-comment">
      <span>
        Чтобы оставить свое мнение, необходимо <%= link_to("войти", new_sessions_path) %> или <%= link_to("зарегистрироваться", new_user_path) %>
      </span>
    </div>
  <% end %>
</div>
