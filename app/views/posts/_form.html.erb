<div class="save-form-post">
  <%= form_for @post do |f| %>
    <%= f.error_messages %>
    <div class="table-row">
      <span class="table-cell name"><%= f.label 'Название статьи' %></span>
      <span class="table-cell"><%= f.text_field :title %></span>
    </div>

    <div class="table-row">
      <span class="table-cell name"><%= f.label 'Ранг статьи' %></span>
      <span class="table-cell"><%= f.select :rank, (1..4) %></span>
    </div>

    <div class="table-row">
      <span class="table-cell name"><%= f.label 'Выбрать категорию' %></span>
      <span class="table-cell">
        <%= f.select :category_id, options_for_select(Category.all.collect { |m| [m.name, m.id] }) %>
      </span>
    </div>

    <div class="table-row">
      <span class="table-cell name"><%= f.label 'Фото статьи' %></span>
      <span class="table-cell image-input"><%= f.file_field :image %></span>
    </div>

    <div class="table-row">
      <span class="table-cell name"><%= f.label 'Краткое описание статьи' %></span>
      <span class="table-cell"><%= f.text_area :summary %></span>
    </div>

    <div class="table-row">
      <span class="table-cell name"><%= f.label 'Текст статьи' %></span>
      <span class="table-cell-text"><%= f.text_area :body %></span>
    </div>

    <div class="table-row">
      <span class="table-cell"></span>
      <span class="table-cell"><%= f.submit 'Сохранить', class: "button-new-post" %></span>
    </div>
  <% end %>
</div>
