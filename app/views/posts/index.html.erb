<div class="top-news">
  <div class="top-pages">
    <div class="top-pages-inside">
      <%= render partial: 'top_news', locals: { post_class: "top-pages-top", main_post: @main_posts[0] } %>

      <%= render partial: 'top_news', locals: { post_class: "top-pages-bottom", main_post: @main_posts[1] } %>
    </div>
  </div>
  <div class="top-pages">
    <div class="top-pages-inside">
      <%= render partial: 'top_news', locals: { post_class: "top-pages-bottom none-top-marg", main_post: @main_posts[2] } %>

      <%= render partial: 'top_news', locals: { post_class: "top-pages-top", main_post: @main_posts[3] } %>
    </div>
  </div>
  <div class="top-pages">
    <div class="top-pages-inside">
      <%= render partial: 'top_news', locals: { post_class: "top-pages-bottom none-top-marg", main_post: @main_posts[4] } %>
      <%= render partial: 'top_news', locals: { post_class: "top-pages-bottom none-top-marg", main_post: @main_posts[5] } %>
      <%= render partial: 'top_news', locals: { post_class: "top-pages-bottom", main_post: @main_posts[6] } %>
    </div>
  </div>
  <div class="top-pages">
    <div class="top-pages-inside">
      <%= render partial: 'top_news', locals: { post_class: "top-pages-top", main_post: @main_posts[7] } %>

      <%= render partial: 'top_news', locals: { post_class: "top-pages-bottom", main_post: @main_posts[8] } %>
    </div>
  </div>
</div>

<h1 id="title-posts">ЛЮДИ</h1>

<div class="green">
  <% index = 0 %>
  <% while index < 5 do %>
    <% if @minor_posts[index] %>
      <div class="green-bottom">
        <div class="green-part", style="background-image: url(<%= @minor_posts[index].image.url %>); background-size: cover;">
          <%= link_to(post_path(@minor_posts[index]), class: "link-text-green") do %>
            <p>
              <%= truncate(@minor_posts[index].title, length: 72) %>
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
    <% index += 1 %>
  <% end %>
</div>

<div class="people">
  <section class="people1">
    <% if @posts.find_by(rank: 1) %>
      <figure><%= link_to(image_tag(Post.find_by(rank: 1).image.url), post_path(Post.find_by(rank: 1)))  %></figure>
      <article>
        <div class="people1-title">
          <div class="people1-group">СОЦИУМ</div>
          <h3><%= link_to(Post.find_by(rank: 1).title, post_path(Post.find_by(rank: 1))) %></h3>
        </div>
        <div class="people1-summary"><%= Post.find_by(rank: 1).summary %></div>
      </article>
    <% end %>
  </section>

  <section class="people2">
    <% if @posts.find_by(rank: 4) %>
      <figure><%= link_to(image_tag(Post.find_by(rank: 4).image.url), post_path(Post.find_by(rank: 4))) %></figure>
      <article>
        <h4 id="people2-title"><%= link_to(Post.find_by(rank: 4).title, post_path(Post.find_by(rank: 4))) %></h4>
        <div class="people2-summary"><%= Post.find_by(rank: 4).summary %></div>
      </article>
    <% end %>
  </section>

  <section class="people3">
    <ul>
      <li>
        <%= render partial: 'people3_path', locals: { rank_number: {rank: 3} } %>
      </li>
      <li>
        <%= render partial: 'people3_path', locals: { rank_number: {rank: 1} } %>
      </li>
      <li>
        <%= render partial: 'people3_path', locals: { rank_number: {rank: 2} } %>
      </li>
    </ul>
  </section>
</div>

<div class="line"></div>

