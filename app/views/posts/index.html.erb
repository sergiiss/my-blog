<h1 id="title-posts">Список статей</h1>

<% @posts.each do |post| %>
<div>
  <div class="post-image">
    <%= link_to((image_tag post.image.url, class: "rounded float-left", size: "200x160"), post_path(post)) %>
  </div>
  <div class="post">
    <h3><%= link_to post.title, post_path(post) %></h3>
    <p><%= post.summary %></p>
  </div>
</div>
<% end %>
