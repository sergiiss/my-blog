<h1 id="title-posts">ЛЮДИ</h1>

<div class="green">
  <% if @minor_posts %>
    <% @minor_posts.each do |post| %>
      <div class="green-part"><%= link_to((image_tag post.image.url), post_path(post)) %></div>
    <% end %>
  <% end %>
</div>

<div class="people">
  <% if @posts.find_by(rank: 1) %>
    <section class="people1">
      <figure><%= image_tag(Post.find_by(rank: 1).image.url) %></figure>
      <article>
        <div class="people1-title">
          <div class="people1-group">СОЦИУМ</div>
          <h3><%= link_to(Post.find_by(rank: 1).title, post_path(Post.find_by(rank: 1))) %></h3>
        </div>
        <div class="people1-summary"><%= Post.find_by(rank: 1).summary %></div>
      </article>
    </section>
  <% end %>
  <section class="people2">
    <% if @posts.find_by(rank: 4) %>
      <figure><%= image_tag(Post.find_by(rank: 4).image.url) %></figure>
