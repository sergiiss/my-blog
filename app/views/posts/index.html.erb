        <h4 id="people2-title"><%= link_to(Post.find_by(rank: 4).title, post_path(Post.find_by(rank: 4))) %></h4>
        <div class="people2-summary"><%= Post.find_by(rank: 4).summary %></div>
      </article>
    <% end %>
  </section>

  <section class="people3">
    <ul>
      <li>
