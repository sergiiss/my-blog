<%= form_tag change_rank_posts_path, method: :post do %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="table-rank" id="list-head">Название статьи</th>
        <th>Ранг статьи</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td scope="row" id="list-title">
            <%= post.title %>
          </td>
          <td>
            <%= select_tag post.id, options_for_select([1, 2, 3, 4], post.rank) %>
          </td>
        </tr>
      <% end %>
        <tr>
          <td></td>
          <td>
            <%= submit_tag 'Сохранить' %>
          </td>
        </tr>
    </tbody>
  </table>
<% end %>
