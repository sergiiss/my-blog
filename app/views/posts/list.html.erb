
<br><br>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="table-rank" id="list-head">Название статьи</th>
      <th>Ранг статьи</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td scope="row" id="list-title"><%= post.title %></td>
      <td>
        <%= form_for post do |f| %>
          <%= f.select :rank, (1..4) %>
          <%= f.submit 'Сохранить' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
